<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/review_question"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    app:cardBackgroundColor="@android:color/transparent"
    app:layout_constraintLeft_toLeftOf="parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:padding="8dp">
        <TextView
            android:id="@+id/word_matching_answer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer"
            android:padding="@dimen/basic_padding"
            android:layout_margin="@dimen/basic_margin"
            android:textColor="@android:color/white"
            android:labelFor="@id/word_matching_answer"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText
            android:id="@+id/word_matching_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/word_matching_answer_label"
            android:textSize="18sp"
            android:inputType="text" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>