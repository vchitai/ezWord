<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.HomeFragment">
    <android.support.v7.widget.SearchView
        android:id="@+id/home_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Light.SearchView"
        app:iconifiedByDefault="false"
        app:searchIcon="@drawable/ic_search_black_24dp"
        app:closeIcon="@drawable/ic_clear_black_24dp"
        app:showDividers="beginning"
        android:layout_margin="@dimen/basic_margin"
        android:padding="@dimen/basic_padding"
        android:background="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/home_today_word_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/home_today_word"
        android:text="@string/today_word"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/basic_margin"
        style="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/home_search_view"/>

    <android.support.v7.widget.CardView
        android:id="@+id/home_today_word"
        style="@style/CardViewStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_today_word_label">
        <include layout="@layout/word_item"/>
    </android.support.v7.widget.CardView>
