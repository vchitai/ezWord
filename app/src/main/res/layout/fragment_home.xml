    <TextView
        android:id="@+id/home_last_look_up_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/home_today_word"
        android:text="@string/last_look_up"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/basic_margin"
        style="@style/TextAppearance.AppCompat.Small"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@id/home_today_word"/>

    <android.support.v7.widget.CardView
        android:id="@+id/home_last_look_up"
        style="@style/CardViewStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_last_look_up_label">
        <include layout="@layout/word_item"/>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
