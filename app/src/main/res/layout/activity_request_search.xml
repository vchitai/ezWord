<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="200dp"
    tools:context="com.ezword.ezword.activities.RequestSearchActivity">

    <TextView
        android:id="@+id/word_item_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/word"/>
    <TextView
        android:id="@+id/word_item_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_item_word"
        style="@style/TextAppearance.AppCompat.Small"
        android:text="@string/type"/>
    <TextView
        android:id="@+id/word_item_def"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/word_item_type"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:text="@string/definition"/>


</android.support.constraint.ConstraintLayout>
