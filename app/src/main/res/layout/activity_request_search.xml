<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="400dp"
    android:minHeight="300dp"
    tools:context="com.ezword.ezword.activities.RequestSearchActivity">
    <ScrollView
        android:id="@+id/request_search_root"
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <include layout="@layout/word_item"/>
    </ScrollView>
    <ImageButton
        android:id="@+id/request_search_bookmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        style="@style/Widget.AppCompat.ImageButton"
        app:layout_constraintRight_toLeftOf="@id/request_search_go_to_def"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_bookmark_black_24dp"/>
    <ImageButton
        android:id="@+id/request_search_go_to_def"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        style="@style/Widget.AppCompat.ImageButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_search_black_24dp"/>
</android.support.constraint.ConstraintLayout>
