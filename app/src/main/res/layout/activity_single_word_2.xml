<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sub_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.Toolbar
        android:layout_marginTop="24dp"
        android:id="@+id/single_word_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="100dp"
        android:background="@android:color/transparent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/word_item_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@android:color/white"
                android:padding="@dimen/basic_padding"
                android:layout_margin="@dimen/basic_margin"
                android:paddingStart="56dp"
                android:textSize="48sp"
                android:text="@string/word"/>

            <TextView
                android:id="@+id/word_item_phonetic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/basic_padding"
                android:textColor="#ffb606"
                android:layout_margin="@dimen/basic_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingStart="56dp"
                app:layout_constraintTop_toBottomOf="@id/word_item_word"
                style="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/pronunciation"/>

            <TextView
                android:id="@+id/word_item_def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/basic_padding"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/basic_margin"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/word_item_phonetic"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:paddingBottom="60dp"
                android:text="@string/definition"/>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
