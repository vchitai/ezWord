<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/login_logo_iv"
        style="@style/LogoView"
        android:contentDescription="@string/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_username_til"
        style="@style/TextInputLayoutStyle"
        android:hint="@string/username"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_username_tiet"
            android:singleLine="true"
            android:nextFocusForward="@id/login_password_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_password_til"
        style="@style/TextInputLayoutStyle"
        android:hint="@string/password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_username_til">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_password_tiet"
            android:singleLine="true"
            android:inputType="textPassword"
            android:nextFocusForward="@id/login_password_tiet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ButtonBarStyle"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/login_password_til">
        <Button
            android:id="@+id/login_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RoundButtonStyle"
            android:text="@string/login"/>
        <Button
            android:id="@+id/login_sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/RoundButtonStyle"
            android:text="@string/sign_up"/>
    </android.support.v7.widget.ButtonBarLayout>
</android.support.constraint.ConstraintLayout>